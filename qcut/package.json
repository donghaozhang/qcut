{
  "name": "opencut",
  "version": "0.1.0",
  "description": "Open-source video editor",
  "author": "OpenCut Team",
  "main": "electron/main.js",
  "packageManager": "bun@1.2.18",
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/jszip": "^3.4.1",
    "cross-env": "^10.0.0",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "electron-packager": "^17.1.2",
    "husky": "^9.1.7",
    "turbo": "^2.5.4",
    "typescript": "5.8.3",
    "ultracite": "5.0.48"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "lint": "npx ultracite@latest lint",
    "format": "npx ultracite@latest format",
    "electron": "electron .",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:dir": "electron-builder --dir",
    "package:win": "electron-packager . QCut --platform=win32 --arch=x64 --out=d:/AI_play/AI_Code/opencut_build --overwrite"
  },
  "build": {
    "appId": "com.qcut.videoeditor",
    "productName": "QCut Video Editor",
    "directories": {
      "output": "d:/AI_play/AI_Code/build_opencut",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "apps/web/dist/**/*",
      "!node_modules"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "QCut Video Editor",
      "installerIcon": "build/icon.png",
      "uninstallerIcon": "build/icon.png",
      "installerHeaderIcon": "build/icon.png",
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true
    },
    "fileAssociations": [
      {
        "ext": "qcut",
        "name": "QCut Project",
        "description": "QCut Project File",
        "icon": "build/icon.png"
      },
      {
        "ext": "mp4",
        "name": "MP4 Video",
        "description": "MPEG-4 Video File",
        "icon": "build/icon.png"
      },
      {
        "ext": "avi",
        "name": "AVI Video",
        "description": "AVI Video File",
        "icon": "build/icon.png"
      },
      {
        "ext": "mov",
        "name": "QuickTime Video",
        "description": "QuickTime Movie File",
        "icon": "build/icon.png"
      },
      {
        "ext": "mkv",
        "name": "Matroska Video",
        "description": "Matroska Video File",
        "icon": "build/icon.png"
      },
      {
        "ext": "webm",
        "name": "WebM Video",
        "description": "WebM Video File",
        "icon": "build/icon.png"
      }
    ]
  },
  "dependencies": {
    "@ffmpeg/core": "^0.12.10",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "jszip": "^3.10.1",
    "next": "^15.3.4",
    "wavesurfer.js": "^7.9.8"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "electron",
    "electron-winstaller",
    "esbuild",
    "sharp"
  ]
}
