{
  "name": "opencut",
  "version": "0.1.0",
  "description": "Open-source video editor",
  "author": "OpenCut Team",
  "main": "electron/main.js",
  "packageManager": "bun@1.2.18",
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/jszip": "^3.4.1",
    "cross-env": "^10.0.0",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "electron-packager": "^17.1.2",
    "husky": "^9.1.7",
    "turbo": "^2.5.4",
    "typescript": "5.8.3",
    "ultracite": "5.0.48"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "lint": "npx ultracite@latest lint",
    "format": "npx ultracite@latest format",
    "electron": "electron .",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win -c.win.forceCodeSigning=false",
    "dist:dir": "electron-builder --dir",
    "dist:win:unsigned": "electron-builder --win --config.win.forceCodeSigning=false --config.win.verifyUpdateCodeSignature=false",
    "dist:win:release": "electron-builder --win --config.win.forceCodeSigning=false --config.win.verifyUpdateCodeSignature=false",
    "package:win": "electron-packager . QCut --platform=win32 --arch=x64 --out=d:/AI_play/AI_Code/opencut_build --overwrite"
  },
  "build": {
    "appId": "com.qcut.videoeditor",
    "productName": "QCut Video Editor",
    "copyright": "Copyright Â© 2024 QCut Team",
    "directories": {
      "output": "d:/AI_play/AI_Code/build_opencut",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "apps/web/dist/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/dist-packager/**/*",
      "!**/dist-packager-*/**/*",
      "!**/electron-builds/**/*",
      "!**/docs/**/*",
      "!**/test/**/*",
      "!**/tests/**/*",
      "!**/coverage/**/*",
      "!**/.turbo/**/*",
      "!**/.next/**/*",
      "!**/packages/**/*",
      "!**/apps/landing/**/*"
    ],
    "compression": "maximum",
    "npmRebuild": true,
    "nodeGypRebuild": false,
    "extraResources": [
      {
        "from": "electron/resources/",
        "to": "resources/",
        "filter": ["**/*.exe", "**/*.dll"]
      }
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "asar": true,
    "asarUnpack": [
      "**/node_modules/sharp/**/*",
      "**/node_modules/@ffmpeg/**/*",
      "**/electron/resources/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "forceCodeSigning": false,
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false,
      "legalTrademarks": "QCut is a trademark of QCut Team",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "QCut Video Editor",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "menuCategory": "Video",
      "perMachine": false,
      "allowElevation": true,
      "displayLanguageSelector": false,
      "installerSidebar": "build/icon.ico",
      "uninstallerSidebar": "build/icon.ico",
      "license": false,
      "warningsAsErrors": false,
      "packElevateHelper": true,
      "differentialPackage": true
    },
    "protocols": [
      {
        "name": "qcut-protocol",
        "schemes": ["qcut"]
      }
    ],
    "fileAssociations": [
      {
        "ext": "qcut",
        "name": "QCut Project",
        "description": "QCut Project File",
        "icon": "build/icon.ico"
      },
      {
        "ext": "mp4",
        "name": "MP4 Video",
        "description": "MPEG-4 Video File",
        "icon": "build/icon.ico"
      },
      {
        "ext": "avi",
        "name": "AVI Video",
        "description": "AVI Video File",
        "icon": "build/icon.ico"
      },
      {
        "ext": "mov",
        "name": "QuickTime Video",
        "description": "QuickTime Movie File",
        "icon": "build/icon.ico"
      },
      {
        "ext": "mkv",
        "name": "Matroska Video",
        "description": "Matroska Video File",
        "icon": "build/icon.ico"
      },
      {
        "ext": "webm",
        "name": "WebM Video",
        "description": "WebM Video File",
        "icon": "build/icon.ico"
      }
    ]
  },
  "dependencies": {
    "@ffmpeg/core": "^0.12.10",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "jszip": "^3.10.1",
    "next": "^15.3.4",
    "wavesurfer.js": "^7.9.8"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "electron",
    "electron-winstaller",
    "esbuild",
    "sharp"
  ]
}
